{
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "extends": ["airbnb"],
  "plugins": ["compat"],
  "rules": {
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "no-param-reassign": [2, { "props": false }],
    "no-use-before-define": 0,
    "no-unused-vars": 0,
    "compat/compat": 2,
    "react/sort-comp": 0,
    "react/default-props-match-prop-types": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never"
      }
    ]
  },
  "env": {
    "browser": true
  },
  "settings": {
    "polyfills": ["fetch"]
  }
}
